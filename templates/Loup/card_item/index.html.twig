{% extends 'base.html.twig' %}

{% block title %}CardItem index{% endblock %}

{% block body %}
    <h1>CardItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for card_item in card_items %}
            <tr>
                <td>{{ card_item.id }}</td>
                <td>{{ card_item.quantity }}</td>
                <td>
                    <a href="{{ path('app_card_item_show', {'id': card_item.id}) }}">show</a>
                    <a href="{{ path('app_card_item_edit', {'id': card_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_card_item_new') }}">Create new</a>
{% endblock %}
