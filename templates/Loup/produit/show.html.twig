

{% extends 'template/index.html.twig' %}

{% block title %}Bienvenue dans notre magasin{% endblock %}

    {% block header %}
<div class="site-wrap">

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icon-close2 js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <header class="site-navbar py-4" role="banner">
        <div class="container">
            <div class="d-flex align-items-center">
                <div class="logo">
                    <a href="{{ path('app_template') }}">
                        <img src="{{ asset ('front/images/logo.png') }}" alt="Logo" width="140" height="80" >
                    </a>
                </div>
                <div class="ml-auto">
                    <nav class="site-navigation position-relative text-right" role="navigation">
                        <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                            <li ><a href="{{ asset ('front/index.html') }}" class="nav-link">Home</a></li>
                            <li><a href="{{ path('app_event_index') }}" class="nav-link">Events</a></li>
                            <li class="active" ><a href="{{ path('app_produit_index') }}" class="nav-link">Products</a></li>
                            <li><a href="{{ asset ('front/blog.html') }}" class="nav-link">Equipments</a></li>
                            <li><a href="{{ asset ('front/contact.html') }}" class="nav-link">Contact</a></li>
                            {% if app.user %}
                                
                                <a href="{{ path('security_cart_by_user', { userId: app.user.id }) }}">My Cart</a>
                             {% endif %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="#">My profile</a>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">Log Out</a>
                                </div>
                            </li>
                        </ul>
                    </nav>

                    <a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black float-right text-white"><span
                                class="icon-menu h3 text-white"></span></a>
                </div>
            </div>
        </div>


    </header>
    {% endblock %}
    

{% block content %}
<div class="container py-5">
  <h1 class="text-center mb-4" style="color: red;">Our Products</h1>
  <hr class="bg-primary mb-4">
  <div class="row">
    <div class="col-12 mb-4">
      <form action="{{ path('app_produit_index') }}" method="GET">
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <select name="categorie" id="categorie" class="form-control">
                <option value=""style="color: green;">All Categories</option>
                {% for categorie in categories %}
                <option value="{{ categorie.id }}" style="color: green;"{% if selectedCategory is not null and categorie.id == selectedCategory.id %}selected{% endif %}>{{ categorie.nomCat }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  
<div class="row">
  {% for produit in pagination %}
  <div class="col-md-4 col-sm-6 mb-4">
    <div class="card" style="border: 2px solid #e9ecef;">
      <div class="card">
        <img src="{{ vich_uploader_asset(produit, 'imageFile') }}" alt="{{ produit.libelle }}" class="card-img-top">
        <div class="card-body">
          <h5 class="card-title" style="color: #1a1a1a; font-family: 'Open Sans', sans-serif;">{{ produit.libelle }}</h5>
          <p class="card-text" style="color: #666666; font-family: 'Open Sans', sans-serif;">Stock: {{ produit.stock }}</p>
          <p class="card-text" style="color: #666666; font-family: 'Open Sans', sans-serif;">Prix: {{ produit.prix }} €</p>
          <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary" style="background-color: #1a1a1a; border-color: #1a1a1a;">Voir détails</a>
          <form method="POST" action="{{ path('app_cart_add', {'id': produit.id}) }}">
            <button type="submit" class="btn btn-success mt-2" style="background-color: #44c767; border-color: #44c767;">Ajouter au panier</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>




<style>
    .product-img:hover {
        transform: scale(1.1);
        transition: all 0.3s ease-in-out;
    }

    .card {
        border-radius: 5px;
        padding: 10px;
        box-shadow: 0 0 5px rgba(0,0,0,0.3);
    }


    .border-primary {
        border-color: #007bff !important;
    }
</style>      
    </div>
    <div class="d-flex justify-content-center my-4">
      {{ knp_pagination_render(pagination) }}
    </div>
  </div>
{% endblock %}



