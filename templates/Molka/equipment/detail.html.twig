{% extends "front/base.html.twig" %}

{% block body %}
    <h1>Equipment</h1>
    <div class="hero overlay" style="background-image: url('images/bg_3.jpg');">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-5 mx-auto text-center">
              <h1 class="text-white">Details</h1>
              <p>check ur equipment</p>
            </div>
          </div>
        </div>
      </div>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ equipment.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ equipment.adress }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ equipment.type }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ equipment.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ equipment.Price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipment_index') }}">  <span class="material-icons">
        arrow_back
        </span> back to list  
</a>

{% endblock %}
