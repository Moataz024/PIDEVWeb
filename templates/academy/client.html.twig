{% block content %}
<div class="container">
            <div class="row align-items-center" >

    <h1 style="font-size:30px; color:white; margin:10px;">Academies list</h1>
    <html>
    <head>
    <style>
    .table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 1em;
        font-family: sans-serif;
        min-width: 400px;
        /* box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        border: none; */
    }
    .table thead tr {
    background-color: #3CB371;
    color: #ffffff;
    text-align: left;
    }
    .table th,
    .table td {
        border: none;
        text-align: left;
        padding: 1px 2px;
    }
    

    </style>
    </head>
    <body>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Name</th>
                <th>Category</th>
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for academy in academies %}
            <tr>
                {# <td>{{ academy.id }}</td> #}
                <td>{{ academy.name }}</td>
                <td>{{ academy.category }}</td>
                <td>
                    <form method="post" action="{{ path('app_academy_show', {'id': academy.id}) }}">   
                        <button class="sh" ><img src="{{ asset ('icons/show.png') }}" alt="Show" width="25" height="25"><span> Show</span></button>
                        <style>
                            .sh {
                            background-color: #FFFFFF; /* Green */
                            border: none;
                            color: black;
                            padding: 2px 6px;
                            text-align: center;
                            text-decoration: none;
                            display: inline-block;
                            font-size: 16px;
                            margin: 4px 2px;
                            cursor: pointer;
                            border-radius: 10px;
                            box-shadow: 0px 4px 5px rgba(0, 0, 0, 0.2);
                            }

                            .sh:hover {
                            background-color: #32CD32; /* Darker green */
                            }

                            </style>
                        </form>
                    {# <a href="{{ path('app_academy_show_client', {'id': academy.id}) }}"><img src="{{ asset ('icons/show.png') }}" alt="Show" width="25" height="25"></a> #}
                    {# <a href="{{ path('app_academy_edit', {'id': academy.id}) }}">edit</a> #}
                    {# {{ include('academy/_delete_form.html.twig') }} #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </body>
    </html> 

    {# <a href="{{ path('app_academy_new') }}">Create new</a> #}
{% endblock %}
