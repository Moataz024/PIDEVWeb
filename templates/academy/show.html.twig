                            <a href="{{ path('cart_by_user',{ userId : app.user.id}) }}">Cart</a>
                            {% endif %}
                            <li><a href="{{ path('app_category_index_front') }}" class="nav-link">Equipments</a></li>
                            <li class="active"><a href="{{ path('app_academy_index') }}" class="nav-link">Academy</a></li>
                            <li><a href="{{ path('app_coach_index') }}" class="nav-link">Coach</a></li>
