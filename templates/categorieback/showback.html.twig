{% extends "back/base.html.twig" %}

{% block body %}
<h1>Categories:</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nomCat }}</td>
                
                <td>
                    <a href="{{ path('app_categorieback_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('app_categorieback_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorieback_new') }}">Create new</a>


   
{% endblock %}
{% block footer %}
{% endblock %}