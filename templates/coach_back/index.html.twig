{% extends "back/base.html.twig" %}

{% block body %}
    <h1>Coaches list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Academy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coach_back in coach_backs %}
            <tr>
                <td>{{ coach_back.id }}</td>
                <td>{{ coach_back.name }}</td>
                <td>{{ coach_back.email }}</td>
                <td>{{ coach_back.telephone }}</td>
                <td>{{ coach_back.academy }}</td>
                <td>
                    <a href="{{ path('app_coach_back_show', {'id': coach_back.id}) }}"><img src="{{ asset ('icons/show.png') }}" alt="Show" width="25" height="25"></a>
                    <a href="{{ path('app_coach_back_edit', {'id': coach_back.id}) }}"><img src="{{ asset ('icons/edit.png') }}" alt="Edit" width="25" height="25"></a>
                    {{ include('coach_back/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        {% for coach_front in coach_fronts %}
            <tr>
                <td>{{ coach_front.id }}</td>
                <td>{{ coach_front.name }}</td>
                <td>{{ coach_front.email }}</td>
                <td>{{ coach_front.telephone }}</td>
                <td>{{ coach_front.academy }}</td>
                <td>
                    <a href="{{ path('app_coach_show', {'id': coach_front.id}) }}">show</a>
                    <a href="{{ path('app_coach_edit', {'id': coach_front.id}) }}">edit</a>
                    <a href="{{ path('app_coach_delete', {'id': coach_front.id}) }}">delete</a>
                    {# {{ include('coach_back/_delete_form.html.twig') }}                     #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coach_back_new') }}">Create new</a>
{% endblock %}
