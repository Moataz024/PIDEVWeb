                        N/A
                    {% endif %}

                </td>

                <td>
                    {% if equipment.suppliers is not null %}
                    {{ equipment.suppliers.name }}
                    {% else %}
                        N/A
                    {% endif %}

                </td>

                <td>{{ equipment.name }}</td>
                <td>{{ equipment.adress }}</td>
                <td>{{ equipment.type }}</td>
                <td>{{ equipment.quantity }}</td>
                <td>{{ equipment.Price }}</td>
                <td>
                
                 <a href="{{ path('app_equipment_show', {'id': equipment.id}) }}">show <span class="material-icons">
