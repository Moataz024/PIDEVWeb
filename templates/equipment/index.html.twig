{% extends "back/base.html.twig" %}

{% block body %}
    <h1>Equipment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adress</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipment in equipment %}
            <tr>
                <td>{{ equipment.id }}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.adress }}</td>
                <td>{{ equipment.type }}</td>
                <td>{{ equipment.quantity }}</td>
                <td>
                    <a href="{{ path('app_equipment_show', {'id': equipment.id}) }}">show</a>
                    <a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}">edit</a>
                    {{ include('equipment/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_equipment_new') }}">Create new</a>
{% endblock %}
