{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block content %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.nom }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ event.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}"><button class="btn btn-outline-primary">Back</button></a>

    {% if is_granted('ROLE_OWNER') or is_granted('ROLE_ADMIN') %}
        {% if app.user.id == event.organisateur.id %}
    <a href="{{ path('app_event_edit', {'id': event.id}) }}"><button class="btn btn-outline-primary">Edit</button></a>
    {{ include('event/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
{% endblock %}
