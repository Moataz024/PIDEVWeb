{% extends 'base.html.twig' %}

{% block title %}{{ event.nom }}{% endblock %}

{% block content %}
    <h3>Participants à l'évènement {{ event.nom }}</h3>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Telephone</th>
        </tr>
        {% for participant in participants %}
        <tr>
            <td>{{ participant.id }}</td>
            <td>{{ participant.email }}</td>
            <td>{{ participant.firstname }}</td>
            <td>{{ participant.lastname }}</td>
            <td>{{ participant.phone }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% for sponsor in sponsors %}
        {{ sponsor.nomSponsor }}
    {% endfor %}
    <a href="{{ path('app_event_index') }}"><button class="btn btn-outline-primary">Back</button></a>


{% endblock %}
