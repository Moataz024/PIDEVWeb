{% block form_row %}
    <div class="row mb-3">
        {{- form_label(form, null, {'label_attr': {'class': 'col-sm-2 col-form-label text-end', 'style': 'padding-left: 35px'}}) -}}
        <div class="col-sm-5">
            {{- form_widget(form, {'attr': {'class': 'form-control form-control-sm'}}) -}}
            {{- form_errors(form) -}}
        </div>
    </div>
{% endblock %}