<body style="background-color: white;">
  <div class="logo">
                    <img src="{{ app.request.schemeAndHttpHost ~ asset ('front/images/logo.png') }}" alt="Logo" width="250" height="150">
    </div>
    
 <br> <br><br> <br>
 <hr></hr>
 <br><br> <br>
  <section>
  <div class="container">
    <div>
    <h1 style="color: #343a40;">Terrain :</h1>
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Sport Type</th>
            <th>Rent Price</th>
            <th>Disponibility</th>
            <th>Address</th>
            <th>Number Of Reservation</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ terrain.name }}</td>
                <td>{{ terrain.capacity }}</td>
                <td>{{ terrain.sportType }}</td>
                <td>{{ terrain.rentPrice }} .Dt</td>
                <td>
                {% if terrain.disponibility %}
                    <span class="badge bg-success">Available</span>
                {% else %}
                    <span class="badge bg-danger">Not Available</span>
                {% endif %}
                </td>
                <td>{{ terrain.roadNumber }} {{ terrain.roadName }}<br>{{ terrain.postalCode }} {{ terrain.city }}<br>{{ terrain.country }}</td>
                <td>{{ terrainReservations[terrain.id]|default(0) }}</td>
                <td class="text-center">
                <img src="{{ app.request.schemeAndHttpHost ~ vich_uploader_asset(terrain, 'imageFile') }}" alt="{{ terrain.name }}" class="product-img" style="max-width: 250px; height: auto;">
                </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
  <br><br>
</section>
</div>

