        <link rel="stylesheet" href="{{ app.request.schemeAndHttpHost ~ asset ('front/css/owl.theme.default.min.css')}}">
        <link rel="stylesheet" href="{{ app.request.schemeAndHttpHost ~ asset ('front/css/owl.theme.default.min.css')}}">       
        <link rel="stylesheet" href="{{ app.request.schemeAndHttpHost ~ asset ('front/css/aos.css')}}">
