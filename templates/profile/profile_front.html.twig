                                        <img width="50" height="50" class="rounded-circle" src="{{ vich_uploader_asset(app.user, 'avatarFile')}}" alt="{{ app.user.nomutilisateur }}" >
                                        {{  app.user.nomutilisateur  }}</p>
                                        <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                    <a class="dropdown-item preview-item" href="{{ path('app_profile',{ 'id' : app.user.id}) }}">
                                        <div class="preview-thumbnail">
