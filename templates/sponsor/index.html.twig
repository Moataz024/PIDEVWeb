{% extends 'base.html.twig' %}

{% block title %}SponsorE index{% endblock %}

{% block content %}
    <h1>SponsorE index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSponsor</th>
                <th>EmailSponsor</th>
                <th>TelSponsor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsor_e in sponsor_es %}
            <tr>
                <td>{{ sponsor_e.id }}</td>
                <td>{{ sponsor_e.nomSponsor }}</td>
                <td>{{ sponsor_e.emailSponsor }}</td>
                <td>{{ sponsor_e.telSponsor }}</td>
                <td>
                    <a href="{{ path('app_sponsor_show', {'id': sponsor_e.id}) }}"><button class="btn btn-outline-primary">Show</button></a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_sponsor_edit', {'id': sponsor_e.id}) }}"><button class="btn btn-outline-primary">Edit</button></a>
                    {% endif  %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sponsor_new') }}"><button class="btn btn-outline-primary">Creat new</button></a>
{% endblock %}
