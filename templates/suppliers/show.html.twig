{% extends "back/base.html.twig" %}

{% block body %}
    <h1>Suppliers</h1>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ supplier.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ supplier.email }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ supplier.adress }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ supplier.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_suppliers_index') }}"> <span class="material-icons">
        arrow_back
        </span> back to list  </a>

    <a href="{{ path('app_suppliers_edit', {'id': supplier.id}) }}"> <span class="material-icons">
        edit
        </span> edit </a>

    {{ include('suppliers/_delete_form.html.twig') }}
{% endblock %}
