  <section>
  
  <div class="container">
    <div >
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Sport Type</th>
            <th>Rent Price</th>
            <th>Disponibility</th>
            <th>Address</th>
            <th>Number of Reservation</th>
            <th>Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for terrain in terrains %}
          
          <tr>
            <td>{{ terrain.name }}</td>
            <td>{{ terrain.capacity }}</td>
            <td>{{ terrain.sportType }}</td>
            <td>{{ terrain.rentPrice }} .Dt</td>
            <td>
              {% if terrain.disponibility %}
                <span class="badge bg-success">Available</span>
              {% else %}
                <span class="badge bg-danger">Not Available</span>
              {% endif %}
            </td>
            <td>{{ terrain.roadNumber }} {{ terrain.roadName }}<br>{{ terrain.postalCode }} {{ terrain.city }}<br>{{ terrain.country }}</td>
            <td>{{ terrainReservations[terrain.id]|default(0) }}</td>
            <td class="text-center">
              <img src="{{ vich_uploader_asset(terrain, 'imageFile') }}" alt="{{ terrain.name }}" class="product-img" style="max-width: 250px; height: auto;">
            </td>
            <td>
              <div class="btn-group" role="group">
              <a href="{{ path('app_terrain_show', {'id_terrain': terrain.id}) }}" class="btn btn-sm btn-dark" title="View"><i class="icon-eye" style="font-size: 20px;"></i></a>
              <a href="{{ path('app_terrain_edit', {'id_terrain': terrain.id}) }}" class="btn btn-sm btn-danger" title="Edit"><i class="icon-edit" style="font-size: 20px;"></i></a>
              <a href="{{ path('app_export_terrain_pdf', {'id_terrain': terrain.id}) }}" class="btn btn-sm btn-light" title="Export-Pdf"><i class="icon-picture_as_pdf" style="font-size: 20px;"></i></a>
              <a href="{{ path('app_terrain_list_Reservations', {'id_terrain': terrain.id}) }}" class="btn btn-sm btn-dark" title="List Of Reservations"><i class="icon-th-list" style="font-size: 20px;"></i></a>
              <a href="{{ path('app_terrain_Calendar', {'id_terrain': terrain.id}) }}" class="btn btn-sm btn-danger" title="Reservations-Calendar"><i class="icon-calendar" style="font-size: 20px;"></i></a>
              </div>
            </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="8" class="text-center">No records found</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
       <button type="button" class="btn btn-dark" >
    <a href="{{ path('app_terrain_new') }}" >Create new</a>
    </button>
    </div>
