{% block body %}
    <div class="card-body">
        <h4 class="card-title">Manage users</h4>
        <p class="card-description">
        </p>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th> Username </th>
                    <th> Full name </th>
                    <th> Email </th>
                    <th> Role </th>
                    <th> Phone </th>
                    <th> Actions </th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                {% if (user.id != app.user.id) %}
                <tr>
                    <td class="py-1">
{#
                        <img src="../../assets/images/faces-clipart/pic-1.png" alt="image">
#}
                        {{ user.nomutilisateur }}

                    </td>
                    <td> {{ user.firstname ~ " " ~ user.lastname }} </td>
                    <td>
                        {{ user.email }}
                    </td>
                    <td>
                        {% for role in user.roles %}
                        {{ role }} <br/>
                        {% endfor %}
                    </td>
                    <td>
                        {{ user.phone }}
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-info">Change Password</button>
                        <button type="button" class="btn btn-outline-warning">Edit</button>
                        <form method="post" action="{{ path('app_block_unblock', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to block {{ user.lastname }}?');">
                            <button type="submit" class="btn btn-outline-danger">{% if (user.status) %}Unblock Account {% else %} Block account {% endif %}</button>
                        </form>
                    </td>
                </tr>
                {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}



